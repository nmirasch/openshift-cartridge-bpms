#!/bin/bash -eu

source $OPENSHIFT_BPMS_DIR/bin/util
source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

echo "$version" > "$OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_VERSION"

ln -s ${OPENSHIFT_BPMS_DIR}/standalone/log ${OPENSHIFT_BPMS_DIR}/logs

shopt -s dotglob
cp -r ${OPENSHIFT_BPMS_DIR}/versions/${version}/template/* ${OPENSHIFT_BPMS_DIR}/template
mv ${OPENSHIFT_BPMS_DIR}/versions/${version}/share/* ${OPENSHIFT_BPMS_DIR}/share
mv ${OPENSHIFT_BPMS_DIR}/versions/${version}/jboss/modules ${OPENSHIFT_BPMS_DIR}/jboss
mv ${OPENSHIFT_BPMS_DIR}/versions/${version}/jboss/jboss-modules.jar ${OPENSHIFT_BPMS_DIR}/jboss
cp ${OPENSHIFT_BPMS_DIR}/standalone/configuration/standalone.xml ${OPENSHIFT_BPMS_DIR}/template/.openshift/config
##cp ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/dashbuilder.war ${OPENSHIFT_BPMS_DIR}/standalone/deployments/dashbuilder.war
##cp -R ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/dashbuilder.war ${OPENSHIFT_BPMS_DIR}/standalone/deployments
##cp -R ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/business-central.war ${OPENSHIFT_BPMS_DIR}/standalone/deployments
mv ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/dashbuilder.war ${OPENSHIFT_BPMS_DIR}/standalone/deployments/
mv ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/business-central.war ${OPENSHIFT_BPMS_DIR}/standalone/deployments/
cp ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/dashbuilder.war.dodeploy ${OPENSHIFT_BPMS_DIR}/standalone/deployments
cp ${OPENSHIFT_BPMS_DIR}/versions/${version}/standalone/deployments/business-central.war.dodeploy ${OPENSHIFT_BPMS_DIR}/standalone/deployments


sed -i "s/{APP_NAME}/${OPENSHIFT_APP_NAME}/g" ${OPENSHIFT_BPMS_DIR}/template/pom.xml

pushd $OPENSHIFT_BPMS_DIR/template/src/main/webapp
  jar cvf $OPENSHIFT_BPMS_DIR/standalone/deployments/ROOT.war ./*
popd

JBOSS_HOME=${OPENSHIFT_BPMS_DIR}/jboss
pushd $OPENSHIFT_BPMS_DIR > /dev/null
  ln -s ${JBOSS_HOME}/jboss-modules.jar
  ln -s ${JBOSS_HOME}/modules
popd 1> /dev/null

# Disable Openshift management
set_env_var DISABLE_OPENSHIFT_MANAGED_SERVER_CONFIG true ~/.env/user_vars

# Set usernames, generate passwords and create env variables
echo 'Generating username and password'

bpmsuser_username=user
dbadmin_username=dbadmin
msuser_username=msuser
msadmin_username=msadmin
bpmsuser_password=$(generate_password)
dbadmin_password=$(generate_password)
msuser_password=$(generate_password)
msadmin_password=$(generate_password)

# env vars
#
echo "$bpmsuser_username" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_BPMSUSER_USERNAME
echo "$bpmsuser_password" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_BPMSUSER_PASSWORD
echo "$dbadmin_username" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_DBADMIN_USERNAME
echo "$dbadmin_password" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_DBADMIN_PASSWORD
echo "$msuser_username" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_MSUSER_USERNAME
echo "$msuser_password" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_MSUSER_PASSWORD
echo "$msadmin_username" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_MSADMIN_USERNAME
echo "$msadmin_password" > $OPENSHIFT_BPMS_DIR/env/OPENSHIFT_BPMS_MSADMIN_PASSWORD

# Create the bpms-security-users.properties file
# ${OPENSHIFT_BPMS_DIR}/standalone/deployments
echo "# username=password" > "${OPENSHIFT_BPMS_DIR}/standalone/configuration/bpms-users.properties"
echo "${bpmsuser_username}=${bpmsuser_password}" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/bpms-users.properties"
echo "${dbadmin_username}=${dbadmin_password}" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/bpms-users.properties"

# Create the bpms-security-roles.properties file
#
echo "# username=role1,role2" > "${OPENSHIFT_BPMS_DIR}/standalone/configuration/bpms-roles.properties"
echo "${bpmsuser_username}=user,odata,rest" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/bpms-roles.properties"
echo "${dbadmin_username}=admin" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/bpms-roles.properties"

# Create the modeshape-users.properties file
#
echo "# username=password" > "${OPENSHIFT_BPMS_DIR}/standalone/configuration/modeshape-users.properties"
echo "${msuser_username}=${msuser_password}" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/modeshape-users.properties"
echo "${msadmin_username}=${msadmin_password}" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/modeshape-users.properties"

# Create the modeshape-roles.properties file
#
echo "# username=role1,role2" > "${OPENSHIFT_BPMS_DIR}/standalone/configuration/modeshape-roles.properties"
echo "${msuser_username}=connect,readonly" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/modeshape-roles.properties"
echo "${msadmin_username}=connect,admin,readonly,readwrite" >> "${OPENSHIFT_BPMS_DIR}/standalone/configuration/modeshape-roles.properties"

client_result ""
client_result "Red Hat JBoss BPM Suite ${version} cartridge installed.  Please make note of these credentials:"
client_result ""
client_result "              Teiid User: $bpmsuser_username"
client_result "     Teiid User Password: $bpmsuser_password"
client_result ""
client_result "         Dashboard Admin: $dbadmin_username"
client_result "Dashboard Admin Password: $dbadmin_password"
client_result ""
client_result "          Modeshape User: $msuser_username"
client_result " Modeshape User Password: $msuser_password"
client_result ""
client_result "         Modeshape Admin: $msadmin_username"
client_result "Modeshape Admin Password: $msadmin_password"
client_result ""

touch ${OPENSHIFT_BPMS_DIR}/env/OPENSHIFT_BPMS_CLUSTER
touch ${OPENSHIFT_BPMS_DIR}/env/OPENSHIFT_BPMS_CLUSTER_REMOTING

update-configuration java7
